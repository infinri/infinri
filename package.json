{
  "name": "infinri",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "node build.js",
    "watch:css": "chokidar 'app/**/view/**/css/**/*.less' -c 'node build.js'",
    "watch:js": "chokidar 'app/**/view/**/js/**/*.js' -c 'node build.js'",
    "watch": "npm-run-all --parallel watch:css watch:js",
    "dev": "npm run build && npm run watch"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.3",
    "less": "^4.4.2",
    "lightningcss-cli": "^1.30.2",
    "npm-run-all": "^4.1.5",
    "terser": "^5.44.0"
  }
}
