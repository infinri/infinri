<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- Form Settings -->
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">cms_page_form.page_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Page Information</item>
    </argument>

    <settings>
        <buttons>
            <button name="back">
                <url path="*/*/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="*/*/save"/>
                <class>primary</class>
                <label translate="true">Save Page</label>
            </button>
            <button name="save_and_continue">
                <url path="*/*/save"/>
                <class>save</class>
                <label translate="true">Save &amp; Continue Edit</label>
            </button>
            <button name="delete" class="delete">
                <url path="*/*/delete"/>
                <class>delete</class>
                <label translate="true">Delete Page</label>
            </button>
        </buttons>
        <namespace>cms_page_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>cms_page_form.page_form_data_source</dep>
        </deps>
    </settings>

    <!-- Data Source -->
    <dataSource name="page_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="cms/page/save"/>
            <validateUrl path="cms/page/validate"/>
        </settings>
        <dataProvider class="Infinri\Cms\Ui\Component\Form\DataProvider" name="page_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>page_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <!-- Form Fieldsets -->
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>

        <!-- Page ID (hidden) -->
        <field name="page_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>page_id</dataScope>
            </settings>
        </field>

        <!-- Title -->
        <field name="title" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Page Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>

        <!-- URL Key -->
        <field name="url_key" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-identifier" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">URL Key</label>
                <dataScope>url_key</dataScope>
                <notice translate="true">Used in the page URL. Lowercase letters, numbers, hyphens, and underscores
                    only.
                </notice>
            </settings>
        </field>

        <!-- Is Active -->
        <field name="is_active" formElement="checkbox">
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Page</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="boolean">false</map>
                            <map name="true" xsi:type="boolean">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>

    <!-- Content Fieldset -->
    <fieldset name="content">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <!-- Content -->
        <field name="content" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Content</label>
                <dataScope>content</dataScope>
            </settings>
            <formElements>
                <textarea>
                    <settings>
                        <rows>15</rows>
                    </settings>
                </textarea>
            </formElements>
        </field>
    </fieldset>

    <!-- SEO Fieldset -->
    <fieldset name="search_engine_optimization">
        <settings>
            <label translate="true">Search Engine Optimization</label>
            <collapsible>true</collapsible>
            <opened>false</opened>
        </settings>

        <!-- Meta Title -->
        <field name="meta_title" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Title</label>
                <dataScope>meta_title</dataScope>
                <notice translate="true">Recommended: 50-60 characters</notice>
            </settings>
        </field>

        <!-- Meta Description -->
        <field name="meta_description" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Description</label>
                <dataScope>meta_description</dataScope>
                <notice translate="true">Recommended: 150-160 characters</notice>
            </settings>
            <formElements>
                <textarea>
                    <settings>
                        <rows>4</rows>
                    </settings>
                </textarea>
            </formElements>
        </field>

        <!-- Meta Keywords -->
        <field name="meta_keywords" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Keywords</label>
                <dataScope>meta_keywords</dataScope>
            </settings>
            <formElements>
                <textarea>
                    <settings>
                        <rows>2</rows>
                    </settings>
                </textarea>
            </formElements>
        </field>
    </fieldset>
</form>
