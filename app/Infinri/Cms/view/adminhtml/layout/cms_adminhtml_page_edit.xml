<?xml version="1.0"?>
<!--
/**
 * CMS Page Edit Layout
 * Route: admin/cms/page/edit?id={page_id}
 * Uses UI Component form (cms_page_form)
 */
-->
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Extend base admin layout (provides header, footer, navigation, CSS/JS) -->
    <update handle="admin_1column"/>

    <!-- Add UI Form (no template needed) -->
    <referenceContainer name="content">
        <block class="Infinri\Core\Block\UiForm" name="cms.page.form">
            <arguments>
                <argument name="component_name" xsi:type="string">cms_page_form</argument>
            </arguments>
        </block>
    </referenceContainer>
</layout>
