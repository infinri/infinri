<?xml version="1.0"?>
<!--
/**
 * Admin Default Layout
 * Base layout for all admin pages
 * Extends base_default and adminhtml_default from Theme module
 * Provides: header, navigation, content area, footer
 */
-->
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Extend base layout and adminhtml styles/scripts from Theme -->
    <update handle="base_default"/>
    <update handle="adminhtml_default"/>
    
    <!-- Use existing header container from base -->
    <referenceContainer name="header.container">
        <block class="Infinri\Core\Block\Template" 
               name="admin.header.block" 
               template="Infinri_Admin::header.phtml"/>
    </referenceContainer>
    
    <!-- Use existing breadcrumbs container from base -->
    <referenceContainer name="breadcrumbs.wrapper">
        <block class="Infinri\Core\Block\Template" 
               name="admin.breadcrumbs.block" 
               template="Infinri_Admin::breadcrumbs.phtml"/>
    </referenceContainer>
    
    <!-- Admin Navigation (add before main content) -->
    <referenceContainer name="page.wrapper">
        <container name="admin.navigation" htmlTag="nav" htmlClass="admin-navigation" before="main.content">
            <block class="Infinri\Admin\Block\Menu" 
                   name="admin.menu" 
                   template="Infinri_Admin::menu.phtml"/>
        </container>
    </referenceContainer>
    
    <!-- Use main.content for admin content area -->
    <referenceContainer name="main.content">
        <!-- Messages -->
        <container name="admin.messages" htmlClass="admin-messages" before="-">
            <block class="Infinri\Core\Block\Template" 
                   name="admin.messages.block" 
                   template="Infinri_Admin::messages.phtml"/>
        </container>
    </referenceContainer>
    
    <!-- Use existing footer container from base -->
    <referenceContainer name="footer.container">
        <block class="Infinri\Core\Block\Template" 
               name="admin.footer.block" 
               template="Infinri_Admin::footer.phtml"/>
    </referenceContainer>
</layout>
