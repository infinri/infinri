/**
 * Admin Navigation Menu Template
 * 
 * @var $block Infinri\Admin\Block\Menu
 */
$menuItems = $block->getMenuItems();
$currentUrl = $block->getCurrentUrl();
?>
<nav class="admin-nav">
    <ul class="admin-nav-list">
        <?php foreach ($menuItems as $item): ?>
            <?php $isActive = $item->isActive($currentUrl); ?>
            <li class="admin-nav-item<?= $isActive ? ' active' : '' ?>">
                <a href="<?= htmlspecialchars($item->getUrl()) ?>" class="admin-nav-link">
                    <?= htmlspecialchars($item->getTitle()) ?>
                </a>
                
                <?php if ($item->hasChildren()): ?>
                    <ul class="admin-nav-submenu">
                        <?php foreach ($item->getChildren() as $child): ?>
                            <?php $isChildActive = $child->isActive($currentUrl); ?>
                            <li class="admin-nav-subitem<?= $isChildActive ? ' active' : '' ?>">
                                <a href="<?= htmlspecialchars($child->getUrl()) ?>" class="admin-nav-sublink">
                                    <?= htmlspecialchars($child->getTitle()) ?>
                                </a>
                            </li>
                        <?php endforeach; ?>
                    </ul>
                <?php endif; ?>
            </li>
        <?php endforeach; ?>
    </ul>
</nav>

