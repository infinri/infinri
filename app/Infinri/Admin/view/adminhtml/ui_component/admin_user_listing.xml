<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- Data Provider Configuration -->
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">admin_user_listing.admin_user_listing_data_source</item>
        </item>
    </argument>

    <!-- Grid Settings -->
    <settings>
        <buttons>
            <button name="add">
                <url path="/admin/users/edit"/>
                <class>primary</class>
                <label translate="true">Add New User</label>
            </button>
        </buttons>
        <spinner>admin_user_columns</spinner>
        <deps>
            <dep>admin_user_listing.admin_user_listing_data_source</dep>
        </deps>
    </settings>

    <!-- Data Source -->
    <dataSource name="admin_user_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">user_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Infinri_Admin::system_users</aclResource>
        <dataProvider class="Infinri\Admin\Ui\Component\Listing\DataProvider" name="admin_user_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>user_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <!-- List Toolbar -->
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected users?</message>
                        <title translate="true">Delete Users</title>
                    </confirm>
                    <url path="user/user/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="enable">
                <settings>
                    <url path="user/user/massStatus">
                        <param name="status">1</param>
                    </url>
                    <type>enable</type>
                    <label translate="true">Enable</label>
                </settings>
            </action>
            <action name="disable">
                <settings>
                    <url path="user/user/massStatus">
                        <param name="status">0</param>
                    </url>
                    <type>disable</type>
                    <label translate="true">Disable</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>

    <!-- Columns Definition -->
    <columns name="admin_user_columns">

        <!-- Selection Column -->
        <selectionsColumn name="ids">
            <settings>
                <indexField>user_id</indexField>
            </settings>
        </selectionsColumn>

        <!-- ID Column -->
        <column name="user_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>

        <!-- Username Column -->
        <column name="username">
            <settings>
                <filter>text</filter>
                <label translate="true">Username</label>
            </settings>
        </column>

        <!-- Email Column -->
        <column name="email">
            <settings>
                <filter>text</filter>
                <label translate="true">Email</label>
            </settings>
        </column>

        <!-- First Name Column -->
        <column name="firstname">
            <settings>
                <filter>text</filter>
                <label translate="true">First Name</label>
            </settings>
        </column>

        <!-- Last Name Column -->
        <column name="lastname">
            <settings>
                <filter>text</filter>
                <label translate="true">Last Name</label>
            </settings>
        </column>

        <!-- Roles Column -->
        <column name="roles">
            <settings>
                <filter>text</filter>
                <label translate="true">Roles</label>
            </settings>
        </column>

        <!-- Status Column -->
        <column name="is_active" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>

        <!-- Last Login Column -->
        <column name="last_login_at" class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Last Login</label>
            </settings>
        </column>

        <!-- Created At Column -->
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>

        <!-- Actions Column -->
        <actionsColumn name="actions" class="Infinri\Admin\Ui\Component\Listing\Column\UserActions">
            <settings>
                <indexField>user_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
