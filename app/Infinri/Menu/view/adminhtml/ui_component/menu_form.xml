<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">menu_form.menu_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Menu Information</item>
    </argument>

    <settings>
        <buttons>
            <button name="back">
                <url path="/admin/menu/menu/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="/admin/menu/menu/save"/>
                <class>primary</class>
                <label translate="true">Save Menu</label>
            </button>
            <button name="save_and_continue">
                <url path="/admin/menu/menu/save"/>
                <class>save</class>
                <label translate="true">Save &amp; Continue Edit</label>
            </button>
            <button name="delete">
                <url path="/admin/menu/menu/delete"/>
                <class>delete</class>
                <label translate="true">Delete Menu</label>
            </button>
        </buttons>
        <namespace>menu_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>menu_form.menu_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="menu_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Infinri_Core/js/form/provider</item>
            </item>
        </argument>
        <argument name="dataProvider" xsi:type="string">Infinri\Menu\Ui\Component\Form\MenuDataProvider</argument>
        <settings>
            <submitUrl path="menu/menu/save"/>
        </settings>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>

        <field name="menu_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>

        <field name="title" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>

        <field name="identifier" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-identifier" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Identifier</label>
                <dataScope>identifier</dataScope>
                <notice translate="true">Unique identifier (e.g., main-navigation, footer-links). Use lowercase letters,
                    numbers, hyphens, and underscores only.
                </notice>
            </settings>
        </field>

        <field name="is_active" formElement="checkbox">
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Is Active</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="boolean">false</map>
                            <map name="true" xsi:type="boolean">true</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="cms_pages">
        <settings>
            <label translate="true">CMS Pages</label>
            <notice translate="true">Select which CMS pages to include in this menu and set their display order.
            </notice>
        </settings>

        <field name="cms_pages" formElement="checkboxset">
            <settings>
                <dataType>array</dataType>
                <label translate="true">Available Pages</label>
                <dataScope>cms_pages</dataScope>
                <notice translate="true">Check pages to include in menu. Lower sort order numbers appear first.</notice>
            </settings>
            <formElements>
                <checkboxset>
                    <settings>
                        <template>Infinri_Menu::form/field/checkboxset-with-sortorder</template>
                    </settings>
                </checkboxset>
            </formElements>
        </field>
    </fieldset>
</form>
