<?xml version="1.0"?>
<!--
/**
 * Menu Item Index Layout
 * Route: admin/menu/menuitem/index
 * Uses UI Component for grid display (menu_item_listing)
 */
-->
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Extend base admin layout (provides header, footer, navigation, CSS/JS) -->
    <update handle="admin_1column"/>
    
    <!-- Add UI Component grid (no template needed) -->
    <referenceContainer name="content">
        <block class="Infinri\Core\Block\UiComponent" name="menu.menuitem.grid">
            <arguments>
                <argument name="component_name" xsi:type="string">menu_item_listing</argument>
            </arguments>
        </block>
    </referenceContainer>
</layout>
