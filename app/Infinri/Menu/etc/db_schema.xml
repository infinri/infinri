<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:infinri:framework:Setup/Declaration/Schema/etc/schema.xsd">
    
    <!-- Menu Container Table -->
    <table name="menu" resource="default" engine="innodb" comment="Menu Container">
        <column xsi:type="int" name="menu_id" unsigned="true" nullable="false" identity="true" comment="Menu ID"/>
        <column xsi:type="varchar" name="identifier" nullable="false" length="255" comment="Unique Identifier"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Menu Title"/>
        <column xsi:type="boolean" name="is_active" nullable="false" default="true" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Update Time"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="menu_id"/>
        </constraint>
        
        <constraint xsi:type="unique" referenceId="MENU_IDENTIFIER">
            <column name="identifier"/>
        </constraint>
        
        <index referenceId="MENU_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>
    
    <!-- Menu Item Table (Hierarchical) -->
    <table name="menu_item" resource="default" engine="innodb" comment="Menu Item">
        <column xsi:type="int" name="item_id" unsigned="true" nullable="false" identity="true" comment="Item ID"/>
        <column xsi:type="int" name="menu_id" unsigned="true" nullable="false" comment="Parent Menu ID"/>
        <column xsi:type="int" name="parent_item_id" unsigned="true" nullable="true" comment="Parent Item ID (for nested menus)"/>
        
        <!-- Item Configuration -->
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Item Title"/>
        <column xsi:type="varchar" name="link_type" nullable="false" length="50" comment="Link Type (cms_page, category, custom_url, external)"/>
        <column xsi:type="int" name="resource_id" unsigned="true" nullable="true" comment="Linked Resource ID"/>
        <column xsi:type="varchar" name="custom_url" nullable="true" length="500" comment="Custom/External URL"/>
        
        <!-- Styling & Behavior -->
        <column xsi:type="varchar" name="css_class" nullable="true" length="255" comment="CSS Classes"/>
        <column xsi:type="varchar" name="icon_class" nullable="true" length="255" comment="Icon Class"/>
        <column xsi:type="boolean" name="open_in_new_tab" nullable="false" default="false" comment="Open in New Tab"/>
        
        <!-- Ordering & Visibility -->
        <column xsi:type="int" name="sort_order" nullable="false" default="0" comment="Sort Order"/>
        <column xsi:type="boolean" name="is_active" nullable="false" default="true" comment="Is Active"/>
        
        <!-- Timestamps -->
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Update Time"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="item_id"/>
        </constraint>
        
        <!-- Foreign Keys -->
        <constraint xsi:type="foreign" 
                    referenceId="MENU_ITEM_MENU_ID_MENU_MENU_ID" 
                    table="menu_item" 
                    column="menu_id" 
                    referenceTable="menu" 
                    referenceColumn="menu_id" 
                    onDelete="CASCADE"/>
        
        <constraint xsi:type="foreign" 
                    referenceId="MENU_ITEM_PARENT_ITEM_ID_MENU_ITEM_ITEM_ID" 
                    table="menu_item" 
                    column="parent_item_id" 
                    referenceTable="menu_item" 
                    referenceColumn="item_id" 
                    onDelete="CASCADE"/>
        
        <!-- Indexes -->
        <index referenceId="MENU_ITEM_MENU_ID_SORT_ORDER" indexType="btree">
            <column name="menu_id"/>
            <column name="sort_order"/>
        </index>
        
        <index referenceId="MENU_ITEM_PARENT_ITEM_ID" indexType="btree">
            <column name="parent_item_id"/>
        </index>
        
        <index referenceId="MENU_ITEM_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
        
        <index referenceId="MENU_ITEM_LINK_TYPE_RESOURCE_ID" indexType="btree">
            <column name="link_type"/>
            <column name="resource_id"/>
        </index>
    </table>
    
    <!-- Extend CMS Page Table -->
    <table name="cms_page">
        <column xsi:type="boolean" name="include_in_menu" nullable="false" default="false" comment="Include in Navigation Menu"/>
        <column xsi:type="int" name="menu_sort_order" nullable="false" default="0" comment="Position in Menu"/>
        
        <index referenceId="CMS_PAGE_INCLUDE_IN_MENU" indexType="btree">
            <column name="include_in_menu"/>
        </index>
    </table>
    
</schema>
