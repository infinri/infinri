<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Root container for entire page -->
    <container name="root">
        <container name="html" htmlTag="html">
            <!-- Head section -->
            <container name="head" htmlTag="head">
                <block class="Infinri\Core\Block\Text" name="head.meta.charset">
                    <arguments>
                        <argument name="text" xsi:type="string"><![CDATA[<meta charset="UTF-8">]]></argument>
                    </arguments>
                </block>
                <block class="Infinri\Core\Block\Text" name="head.meta.viewport">
                    <arguments>
                        <argument name="text" xsi:type="string"><![CDATA[<meta name="viewport" content="width=device-width, initial-scale=1.0">]]></argument>
                    </arguments>
                </block>
                <block class="Infinri\Core\Block\Text" name="head.title">
                    <arguments>
                        <argument name="text" xsi:type="string"><![CDATA[<title>Infinri</title>]]></argument>
                    </arguments>
                </block>
                <container name="head.styles"/>
                <container name="head.scripts"/>
            </container>
            
            <!-- Body section -->
            <container name="body" htmlTag="body">
                <container name="page.wrapper" htmlTag="div" htmlClass="page-wrapper">
                    <!-- Header container (for frontend/admin headers) -->
                    <container name="header.container"/>
                    
                    <!-- Breadcrumbs container -->
                    <container name="breadcrumbs.wrapper"/>
                    
                    <!-- Main content area -->
                    <container name="main.content" htmlTag="main" htmlClass="main-content">
                        <container name="content"/>
                    </container>
                    
                    <!-- Footer container -->
                    <container name="footer.container"/>
                </container>
                <container name="before.body.end"/>
            </container>
        </container>
    </container>
</layout>
