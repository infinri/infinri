<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Extend frontend default -->
    <update handle="default"/>
    
    <!-- Single column layout - content takes full width -->
    <referenceContainer name="main.content">
        <container name="columns" htmlTag="div" htmlClass="columns columns-1">
            <referenceContainer name="content">
                <argument name="htmlClass" xsi:type="string">column main</argument>
            </referenceContainer>
        </container>
    </referenceContainer>
</layout>
