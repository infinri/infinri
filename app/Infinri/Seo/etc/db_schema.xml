<?xml version="1.0"?>
<!--
/**
 * SEO Module Database Schema
 */
-->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:infinri:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!-- URL Rewrite Table -->
    <table name="url_rewrite" resource="default" engine="innodb" comment="URL Rewrites">
        <column xsi:type="int" name="url_rewrite_id" unsigned="true" nullable="false" identity="true" comment="URL Rewrite ID"/>
        <column xsi:type="varchar" name="request_path" length="255" nullable="false" comment="Request Path"/>
        <column xsi:type="varchar" name="target_path" length="255" nullable="false" comment="Target Path"/>
        <column xsi:type="varchar" name="entity_type" length="50" nullable="false" comment="Entity Type (cms_page, category, etc.)"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="true" comment="Entity ID"/>
        <column xsi:type="int" name="redirect_type" unsigned="true" nullable="false" default="0" comment="Redirect Type (0=no redirect, 301, 302)"/>
        <column xsi:type="varchar" name="store_id" length="50" nullable="false" default="default" comment="Store ID"/>
        <column xsi:type="boolean" name="is_autogenerated" nullable="false" default="false" comment="Is Auto-generated"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="url_rewrite_id"/>
        </constraint>
        
        <constraint xsi:type="unique" referenceId="URL_REWRITE_REQUEST_PATH_STORE_ID">
            <column name="request_path"/>
            <column name="store_id"/>
        </constraint>
        
        <index referenceId="URL_REWRITE_ENTITY_TYPE_ENTITY_ID" indexType="btree">
            <column name="entity_type"/>
            <column name="entity_id"/>
        </index>
        
        <index referenceId="URL_REWRITE_REQUEST_PATH" indexType="btree">
            <column name="request_path"/>
        </index>
    </table>

    <!-- Redirect Table (for 301/302 redirects) -->
    <table name="seo_redirect" resource="default" engine="innodb" comment="SEO Redirects">
        <column xsi:type="int" name="redirect_id" unsigned="true" nullable="false" identity="true" comment="Redirect ID"/>
        <column xsi:type="varchar" name="from_path" length="255" nullable="false" comment="From Path"/>
        <column xsi:type="varchar" name="to_path" length="255" nullable="false" comment="To Path"/>
        <column xsi:type="int" name="redirect_code" unsigned="true" nullable="false" default="301" comment="Redirect Code (301 or 302)"/>
        <column xsi:type="varchar" name="description" length="255" nullable="true" comment="Description"/>
        <column xsi:type="boolean" name="is_active" nullable="false" default="true" comment="Is Active"/>
        <column xsi:type="int" name="priority" unsigned="true" nullable="false" default="0" comment="Priority"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="redirect_id"/>
        </constraint>
        
        <index referenceId="SEO_REDIRECT_FROM_PATH" indexType="btree">
            <column name="from_path"/>
        </index>
        
        <index referenceId="SEO_REDIRECT_IS_ACTIVE_PRIORITY" indexType="btree">
            <column name="is_active"/>
            <column name="priority"/>
        </index>
    </table>

    <!-- Sitemap Configuration Table -->
    <table name="seo_sitemap" resource="default" engine="innodb" comment="Sitemap Configuration">
        <column xsi:type="int" name="sitemap_id" unsigned="true" nullable="false" identity="true" comment="Sitemap ID"/>
        <column xsi:type="varchar" name="filename" length="255" nullable="false" default="sitemap.xml" comment="Filename"/>
        <column xsi:type="varchar" name="path" length="255" nullable="false" default="/" comment="Path"/>
        <column xsi:type="boolean" name="is_enabled" nullable="false" default="true" comment="Is Enabled"/>
        <column xsi:type="timestamp" name="last_generated" nullable="true" comment="Last Generated"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="sitemap_id"/>
        </constraint>
    </table>

    <!-- Robots.txt Configuration Table -->
    <table name="seo_robots" resource="default" engine="innodb" comment="Robots.txt Configuration">
        <column xsi:type="int" name="robots_id" unsigned="true" nullable="false" identity="true" comment="Robots ID"/>
        <column xsi:type="text" name="content" nullable="false" comment="Robots.txt Content"/>
        <column xsi:type="boolean" name="is_active" nullable="false" default="true" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="robots_id"/>
        </constraint>
    </table>

</schema>
