<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:infinri:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">seo_redirect_form.redirect_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Redirect Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="back" class="Infinri\Core\Block\Adminhtml\Button\Back"/>
            <button name="delete" class="Infinri\Seo\Block\Adminhtml\Redirect\Button\Delete"/>
            <button name="save" class="Infinri\Core\Block\Adminhtml\Button\Save"/>
            <button name="save_and_continue" class="Infinri\Core\Block\Adminhtml\Button\SaveAndContinue"/>
        </buttons>
        <namespace>seo_redirect_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>seo_redirect_form.redirect_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="redirect_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Infinri_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="seo/redirect/save"/>
        </settings>
        <dataProvider class="Infinri\Seo\Ui\Component\Form\RedirectDataProvider" name="redirect_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>redirect_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>

        <field name="redirect_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">redirect</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>redirect_id</dataScope>
            </settings>
        </field>

        <field name="from_path" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">redirect</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">From Path</label>
                <dataScope>from_path</dataScope>
            </settings>
        </field>

        <field name="to_path" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">redirect</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">To Path</label>
                <dataScope>to_path</dataScope>
            </settings>
        </field>

        <field name="redirect_code" sortOrder="30" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">redirect</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Redirect Type</label>
                <dataScope>redirect_code</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Infinri\Seo\Ui\Component\Listing\Column\RedirectTypeOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="priority" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">redirect</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Priority</label>
                <dataScope>priority</dataScope>
            </settings>
        </field>

        <field name="description" sortOrder="50" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">redirect</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>

        <field name="is_active" sortOrder="60" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">redirect</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Redirect</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
