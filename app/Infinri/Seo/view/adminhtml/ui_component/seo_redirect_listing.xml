<?xml version="1.0"?>
<!--
/**
 * SEO Redirect Listing UI Component
 */
-->
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:infinri:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">seo_redirect_listing.seo_redirect_listing_data_source</item>
        </item>
    </argument>
    
    <settings>
        <spinner>seo_redirect_columns</spinner>
        <deps>
            <dep>seo_redirect_listing.seo_redirect_listing_data_source</dep>
        </deps>
    </settings>
    
    <dataSource name="seo_redirect_listing_data_source">
        <argument name="dataProvider" xsi:type="string">Infinri\Seo\Ui\Component\Listing\RedirectDataProvider</argument>
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="component" xsi:type="string">Infinri_Ui/js/grid/provider</item>
                <item name="update_url" xsi:type="url" path="mui/index/render"/>
                <item name="storageConfig" xsi:type="array">
                    <item name="indexField" xsi:type="string">redirect_id</item>
                </item>
            </item>
        </argument>
    </dataSource>
    
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        
        <bookmark name="bookmarks"/>
        
        <columnsControls name="columns_controls"/>
        
        <filterSearch name="fulltext"/>
        
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="templates" xsi:type="array">
                        <item name="filters" xsi:type="array">
                            <item name="select" xsi:type="array">
                                <item name="component" xsi:type="string">Infinri_Ui/js/grid/filters/elements/ui-select</item>
                                <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </filters>
        
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected redirects?</message>
                        <title translate="true">Delete Redirects</title>
                    </confirm>
                    <url path="seo/redirect/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="enable">
                <settings>
                    <url path="seo/redirect/massEnable"/>
                    <type>enable</type>
                    <label translate="true">Enable</label>
                </settings>
            </action>
            <action name="disable">
                <settings>
                    <url path="seo/redirect/massDisable"/>
                    <type>disable</type>
                    <label translate="true">Disable</label>
                </settings>
            </action>
        </massaction>
        
        <paging name="listing_paging"/>
        
        <button name="add">
            <url path="*/*/edit"/>
            <class>primary</class>
            <label translate="true">Add New Redirect</label>
        </button>
    </listingToolbar>
    
    <columns name="seo_redirect_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>redirect_id</indexField>
            </settings>
        </selectionsColumn>
        
        <column name="redirect_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        
        <column name="from_path">
            <settings>
                <filter>text</filter>
                <label translate="true">From Path</label>
            </settings>
        </column>
        
        <column name="to_path">
            <settings>
                <filter>text</filter>
                <label translate="true">To Path</label>
            </settings>
        </column>
        
        <column name="redirect_code">
            <settings>
                <filter>select</filter>
                <options class="Infinri\Seo\Ui\Component\Listing\Column\RedirectTypeOptions"/>
                <label translate="true">Type</label>
                <dataType>select</dataType>
            </settings>
        </column>
        
        <column name="priority">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Priority</label>
            </settings>
        </column>
        
        <column name="is_active" component="Infinri_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <options class="Infinri\Core\Ui\Component\Listing\Column\StatusOptions"/>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        
        <column name="created_at" class="Infinri\Core\Ui\Component\Listing\Column\Date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>
        
        <actionsColumn name="actions" class="Infinri\Seo\Ui\Component\Listing\Column\RedirectActions">
            <settings>
                <indexField>redirect_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
