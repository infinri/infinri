<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:infinri:framework:Setup/Declaration/Schema/etc/schema.xsd">
    
    <!-- Patch Tracking Table -->
    <table name="patch_list" resource="default" engine="innodb" comment="Applied Data Patches">
        <column xsi:type="int" name="patch_id" unsigned="true" nullable="false" identity="true" comment="Patch ID"/>
        <column xsi:type="varchar" name="patch_name" nullable="false" length="255" comment="Patch Class Name"/>
        <column xsi:type="timestamp" name="applied_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Application Time"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="patch_id"/>
        </constraint>
        
        <constraint xsi:type="unique" referenceId="PATCH_LIST_PATCH_NAME">
            <column name="patch_name"/>
        </constraint>
        
        <index referenceId="PATCH_LIST_APPLIED_AT" indexType="btree">
            <column name="applied_at"/>
        </index>
    </table>
    
    <!-- Core Configuration Table -->
    <table name="core_config_data" resource="default" engine="innodb" comment="Core Configuration Data">
        <column xsi:type="int" name="config_id" unsigned="true" nullable="false" identity="true" comment="Config ID"/>
        <column xsi:type="varchar" name="scope" nullable="false" length="8" default="default" comment="Config Scope (default, website, store)"/>
        <column xsi:type="int" name="scope_id" unsigned="true" nullable="false" default="0" comment="Config Scope ID"/>
        <column xsi:type="varchar" name="path" nullable="false" length="255" comment="Config Path"/>
        <column xsi:type="text" name="value" nullable="true" comment="Config Value"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Update Time"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="config_id"/>
        </constraint>
        
        <constraint xsi:type="unique" referenceId="CORE_CONFIG_DATA_SCOPE_SCOPE_ID_PATH">
            <column name="scope"/>
            <column name="scope_id"/>
            <column name="path"/>
        </constraint>
        
        <index referenceId="CORE_CONFIG_DATA_SCOPE" indexType="btree">
            <column name="scope"/>
        </index>
        
        <index referenceId="CORE_CONFIG_DATA_PATH" indexType="btree">
            <column name="path"/>
        </index>
    </table>
    
    <!-- Sessions Table for Database-Backed Sessions -->
    <table name="sessions" resource="default" engine="innodb" comment="Database-Backed PHP Sessions">
        <column xsi:type="varchar" name="sess_id" nullable="false" length="128" comment="Session ID"/>
        <column xsi:type="text" name="sess_data" nullable="false" comment="Serialized Session Data"/>
        <column xsi:type="int" name="sess_lifetime" unsigned="true" nullable="false" comment="Session Lifetime (seconds)"/>
        <column xsi:type="int" name="sess_time" unsigned="true" nullable="false" comment="Session Timestamp"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="sess_id"/>
        </constraint>
        
        <index referenceId="SESSIONS_LIFETIME" indexType="btree">
            <column name="sess_lifetime"/>
        </index>
        
        <index referenceId="SESSIONS_TIME" indexType="btree">
            <column name="sess_time"/>
        </index>
    </table>
    
</schema>
