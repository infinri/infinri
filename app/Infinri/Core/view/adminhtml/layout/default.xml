<?xml version="1.0"?>
<!--
/**
 * Admin Default Layout
 * Base layout for all admin pages (Magento-style)
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Admin Header -->
        <referenceContainer name="header">
            <block class="Infinri\Core\Block\Template" 
                   name="admin.header" 
                   template="Infinri_Core::adminhtml/header.phtml"/>
        </referenceContainer>
        
        <!-- Admin Navigation (Left Sidebar Menu) -->
        <referenceContainer name="menu">
            <block class="Infinri\Core\Block\Adminhtml\Menu" 
                   name="admin.menu" 
                   template="Infinri_Core::adminhtml/menu.phtml"/>
        </referenceContainer>
        
        <!-- Admin Footer -->
        <referenceContainer name="footer">
            <block class="Infinri\Core\Block\Template" 
                   name="admin.footer" 
                   template="Infinri_Core::adminhtml/footer.phtml"/>
        </referenceContainer>
    </body>
</page>
