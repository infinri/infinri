{
    "name": "infinri/infinri",
    "description": "Modular portfolio CMS built with PHP 8.4 and PostgreSQL",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Modules\\": "modules/",
            "Infinri\\Core\\": "app/Infinri/Core",
            "Infinri\\Theme\\": "app/Infinri/Theme"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest --display-errors --display-warnings",
        "test:fast": "vendor/bin/pest --parallel",
        "deploy:cache": [
            "@cache:config:clear",
            "@cache:config:stats",
            "@cache:clear"
        ],
        "cache:config:clear": "php bin/console cache:config:clear",
        "cache:config:stats": "php bin/console cache:config:stats",
        "cache:clear": "php bin/console cache:clear",
        "test:unit": "vendor/bin/pest tests/Unit",
        "test:integration": "vendor/bin/pest tests/Integration",
        "test:coverage": "vendor/bin/pest --coverage --min=80"
    },
    "require": {
        "php": "^8.4",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-pdo_pgsql": "*",
        "doctrine/dbal": "^4.3",
        "intervention/image": "^3.11",
        "monolog/monolog": "^3.9",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^7.1",
        "robmorgan/phinx": "^0.16.10",
        "respect/validation": "^2.4",
        "symfony/cache": "^7.3",
        "symfony/console": "^7.3",
        "symfony/event-dispatcher": "^7.3",
        "symfony/mailer": "^7.3",
        "symfony/rate-limiter": "^7.3",
        "symfony/security-csrf": "^7.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4",
        "pestphp/pest": "^4.1"
    }
}
